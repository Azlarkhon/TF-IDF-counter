<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>TF-IDF</title>
  <!-- Bootstrap CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      padding-top: 2rem;
    }
    .container {
      max-width: 900px;
    }
    .table thead th {
      background-color: #343a40;
      color: #fff;
    }
    .custom-file-input {
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="mb-4 text-center">TF-IDF</h1>
    <div class="card mb-4 shadow-sm">
      <div class="card-body">
        <form action="/upload" method="post" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="fileInput" class="form-label">Upload a Text File</label>
            <input type="file" name="file" class="form-control" id="fileInput" required>
          </div>
          <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">Upload</button>
          </div>
        </form>
      </div>
    </div>
    
    {{ if .words }}
    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="card-title mb-4">Results</h2>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Word</th>
                <th>Count</th>
                <th>TF</th>
                <th>IDF</th>
                <th>TF*IDF</th>
              </tr>
            </thead>
            <tbody>
              {{ range .words }}
              <tr>
                <td>{{ .Word }}</td>
                <td>{{ .Count }}</td>
                <td>{{ printf "%.5f" .TF }}</td>
                <td>{{ printf "%.5f" .IDF }}</td>
                <td>{{ printf "%.5f" .TFIDF }}</td>
              </tr>
              {{ end }}
            </tbody>
          </table>
        </div>
      </div>
    </div>
    {{ end }}
  </div>

  <!-- Bootstrap Bundle with Popper JS CDN -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
